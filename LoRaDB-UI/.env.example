# GitHub Container Registry Configuration
# Copy this file to .env and update the values

# GitHub repository (format: username/repository-name or org/repository-name)
# Example: GITHUB_REPOSITORY=myusername/loradb-ui
GITHUB_REPOSITORY=justdr00py/loradb-ui

# Image tag to use (latest, v1.0.0, main, etc.)
IMAGE_TAG=latest

# Backend Configuration
#BACKEND_PORT=3001
#JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this
#JWT_EXPIRATION_HOURS=1

# Master Password Protection (optional)
# Minimum 8 characters, protects server management operations
MASTER_PASSWORD=
MASTER_SESSION_HOURS=24

# CORS Configuration
# Set to your frontend URL in production
CORS_ORIGIN=http://localhost:3000

# Automatic Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Frontend Configuration
FRONTEND_PORT=3000

# Note: VITE_API_URL is baked into the frontend image at build time
# To use a custom API URL, you need to rebuild the frontend image or
# use the docker-compose.yml file for local builds

# Rate Limiting Configuration (optional - uses defaults if not set)
# General API rate limit (applies to all /api/* routes)
# Window in milliseconds (900000 = 15 minutes)
# Max requests per window per IP address
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300

# Other rate limits can be configured if needed:
# AUTH_RATE_LIMIT_WINDOW_MS=900000
# AUTH_RATE_LIMIT_MAX=10
# SERVER_CREATION_RATE_LIMIT_WINDOW_MS=3600000
# SERVER_CREATION_RATE_LIMIT_MAX=10
# SERVER_DELETION_RATE_LIMIT_WINDOW_MS=900000
# SERVER_DELETION_RATE_LIMIT_MAX=20
# MASTER_PASSWORD_RATE_LIMIT_WINDOW_MS=900000
# MASTER_PASSWORD_RATE_LIMIT_MAX=5
