# ============================================================================
# LoRaDB UI Configuration
# ============================================================================

# Backend Configuration
BACKEND_PORT=3001

# JWT Configuration - Used for signing session tokens
# IMPORTANT: Must be at least 32 characters long
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-32-character-secret-key-here!!!
JWT_EXPIRATION_HOURS=1

# Master Password Protection (optional)
# Set a password (min 8 characters) to protect server management
# If not set, server management will be unprotected (backward compatible)
MASTER_PASSWORD=your-secure-master-password
MASTER_SESSION_HOURS=24

# Backup & Restore Configuration (optional)
# Enable/disable automatic daily backups
BACKUP_ENABLED=true
# Cron schedule for automatic backups (default: 2 AM daily)
# Format: minute hour day month weekday
BACKUP_SCHEDULE=0 2 * * *
# Number of days to keep automatic backups
BACKUP_RETENTION_DAYS=7

# Database Configuration (optional - uses default if not set)
# DATABASE_PATH=/app/data/servers.db

# Frontend Configuration
FRONTEND_PORT=3000

# Frontend API URL - URL where the backend is accessible from your browser
# If accessing locally: http://localhost:3001
# If accessing remotely: http://YOUR_UI_SERVER_IP:3001
VITE_API_URL=http://localhost:3001

# CORS Configuration - Allow frontend origin
# If accessing locally: http://localhost:3000
# If accessing remotely: http://YOUR_UI_SERVER_IP:3000
CORS_ORIGIN=http://localhost:3000
