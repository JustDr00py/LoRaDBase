  "measurements": [
    {
      "id": "aci1_ma",
      "path": "decoded_payload.object.ACI1_mA",
      "name": "Analog Current Input 1",
      "unit": "mA",
      "decimals": 3,
      "valueType": "number",
      "defaultWidget": "current-value",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": 0, "max": 4, "color": "#ef4444", "label": "Below Range" },
            { "min": 4, "max": 20, "color": "#10b981", "label": "Normal" },
            { "min": 20, "max": 100, "color": "#f59e0b", "label": "Above Range" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": 0,
          "yAxisMax": 25,
          "showArea": false,
          "color": "#3b82f6"
        },
        "gauge": {
          "enabled": true,
          "min": 0,
          "max": 25,
          "zones": [
            { "from": 0, "to": 4, "color": "#ef4444" },
            { "from": 4, "to": 20, "color": "#10b981" },
            { "from": 20, "to": 25, "color": "#f59e0b" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "valueType": "number", "operator": "lt", "value": 4, "status": "error", "label": "Below Range" },
            { "valueType": "number", "operator": "between", "min": 4, "max": 20, "status": "success", "label": "Normal" },
            { "valueType": "number", "operator": "gte", "value": 20, "status": "warning", "label": "Above Range" }
          ]
        }
      }
    },
