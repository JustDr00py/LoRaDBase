{
  "deviceType": "elsys-ers",
  "name": "Elsys ERS Environmental Sensor",
  "manufacturer": "Elsys",
  "description": "Multi-sensor device for temperature, humidity, light, and motion detection",
  "version": "1.0.0",
  "measurements": [
    {
      "id": "temperature",
      "path": "decoded_payload.object.temperature",
      "name": "Temperature",
      "unit": "Â°C",
      "decimals": 1,
      "defaultWidget": "time-series",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": -40, "max": 10, "color": "#3b82f6", "label": "Cold" },
            { "min": 10, "max": 25, "color": "#10b981", "label": "Normal" },
            { "min": 25, "max": 60, "color": "#f59e0b", "label": "Warm" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": -10,
          "yAxisMax": 40,
          "showArea": true,
          "color": "#ef4444"
        },
        "gauge": {
          "enabled": true,
          "min": -10,
          "max": 40,
          "zones": [
            { "from": -10, "to": 10, "color": "#3b82f6" },
            { "from": 10, "to": 25, "color": "#10b981" },
            { "from": 25, "to": 40, "color": "#f59e0b" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "lt", "value": 10, "status": "info", "label": "Cold" },
            { "operator": "between", "min": 10, "max": 25, "status": "success", "label": "Normal" },
            { "operator": "gt", "value": 25, "status": "warning", "label": "Warm" }
          ]
        }
      }
    },
    {
      "id": "humidity",
      "path": "decoded_payload.object.humidity",
      "name": "Humidity",
      "unit": "%",
      "decimals": 0,
      "defaultWidget": "gauge",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": 0, "max": 30, "color": "#ef4444", "label": "Dry" },
            { "min": 30, "max": 70, "color": "#10b981", "label": "Normal" },
            { "min": 70, "max": 100, "color": "#3b82f6", "label": "Humid" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": 0,
          "yAxisMax": 100,
          "showArea": true,
          "color": "#3b82f6"
        },
        "gauge": {
          "enabled": true,
          "min": 0,
          "max": 100,
          "zones": [
            { "from": 0, "to": 30, "color": "#ef4444" },
            { "from": 30, "to": 70, "color": "#10b981" },
            { "from": 70, "to": 100, "color": "#3b82f6" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "lt", "value": 30, "status": "warning", "label": "Dry" },
            { "operator": "between", "min": 30, "max": 70, "status": "success", "label": "Normal" },
            { "operator": "gt", "value": 70, "status": "info", "label": "Humid" }
          ]
        }
      }
    },
    {
      "id": "light",
      "path": "decoded_payload.object.light",
      "name": "Light Level",
      "unit": "lux",
      "decimals": 0,
      "defaultWidget": "time-series",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": 0, "max": 100, "color": "#1e40af", "label": "Dark" },
            { "min": 100, "max": 1000, "color": "#f59e0b", "label": "Dim" },
            { "min": 1000, "max": 10000, "color": "#fbbf24", "label": "Bright" }
          ]
        },
        "time-series": {
          "enabled": true,
          "showArea": true,
          "color": "#fbbf24"
        },
        "gauge": {
          "enabled": true,
          "min": 0,
          "max": 5000,
          "zones": [
            { "from": 0, "to": 100, "color": "#1e40af" },
            { "from": 100, "to": 1000, "color": "#f59e0b" },
            { "from": 1000, "to": 5000, "color": "#fbbf24" }
          ]
        },
        "status": {
          "enabled": false
        }
      }
    },
    {
      "id": "motion",
      "path": "decoded_payload.object.motion",
      "name": "Motion Detected",
      "unit": "",
      "decimals": 0,
      "defaultWidget": "status",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": 0, "max": 1, "color": "#6b7280", "label": "No Motion" },
            { "min": 1, "max": 100, "color": "#f59e0b", "label": "Motion" }
          ]
        },
        "time-series": {
          "enabled": true,
          "color": "#f59e0b"
        },
        "gauge": {
          "enabled": false,
          "min": 0,
          "max": 1
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "eq", "value": 0, "status": "success", "label": "No Motion" },
            { "operator": "gt", "value": 0, "status": "warning", "label": "Motion Detected" }
          ]
        }
      }
    }
  ],
  "widgetTemplates": [
    {
      "id": "environmental",
      "name": "Environmental Overview",
      "description": "Temperature, humidity, and light conditions",
      "layout": "grid",
      "defaultSize": { "w": 8, "h": 6 },
      "sections": [
        {
          "measurementId": "temperature",
          "displayTypes": ["current-value", "time-series"]
        },
        {
          "measurementId": "humidity",
          "displayTypes": ["current-value", "time-series"]
        },
        {
          "measurementId": "light",
          "displayTypes": ["current-value", "time-series"]
        }
      ]
    },
    {
      "id": "climate",
      "name": "Climate Monitor",
      "description": "Temperature and humidity gauges",
      "layout": "horizontal",
      "defaultSize": { "w": 6, "h": 4 },
      "sections": [
        {
          "measurementId": "temperature",
          "displayTypes": ["gauge"]
        },
        {
          "measurementId": "humidity",
          "displayTypes": ["gauge"]
        }
      ]
    },
    {
      "id": "security",
      "name": "Security Monitor",
      "description": "Motion detection and light levels",
      "layout": "vertical",
      "defaultSize": { "w": 5, "h": 5 },
      "sections": [
        {
          "measurementId": "motion",
          "displayTypes": ["status", "time-series"]
        },
        {
          "measurementId": "light",
          "displayTypes": ["current-value", "time-series"]
        }
      ]
    },
    {
      "id": "compact",
      "name": "Compact View",
      "description": "Current values for all sensors",
      "layout": "vertical",
      "defaultSize": { "w": 3, "h": 5 },
      "sections": [
        {
          "measurementId": "temperature",
          "displayTypes": ["current-value"]
        },
        {
          "measurementId": "humidity",
          "displayTypes": ["current-value"]
        },
        {
          "measurementId": "light",
          "displayTypes": ["current-value"]
        },
        {
          "measurementId": "motion",
          "displayTypes": ["status"]
        }
      ]
    }
  ]
}
