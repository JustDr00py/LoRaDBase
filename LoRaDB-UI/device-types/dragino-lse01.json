{
  "deviceType": "dragino-lse01",
  "name": "Dragino LSE01 Soil Moisture & Temperature Sensor",
  "manufacturer": "Dragino",
  "description": "LoRaWAN Soil Moisture and Temperature Sensor (SE01-LB) with soil conductivity, temperature monitoring, and external DS18B20 support",
  "version": "1.0.0",
  "measurements": [
    {
      "id": "soil_moisture",
      "path": "decoded_payload.object.water_SOIL",
      "name": "Soil Moisture",
      "unit": "%",
      "decimals": 2,
      "defaultWidget": "gauge",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": 0, "max": 20, "color": "#ef4444", "label": "Too Dry" },
            { "min": 20, "max": 40, "color": "#f59e0b", "label": "Dry" },
            { "min": 40, "max": 60, "color": "#10b981", "label": "Optimal" },
            { "min": 60, "max": 80, "color": "#06b6d4", "label": "Moist" },
            { "min": 80, "max": 100, "color": "#3b82f6", "label": "Saturated" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": 0,
          "yAxisMax": 100,
          "showArea": true,
          "color": "#06b6d4"
        },
        "gauge": {
          "enabled": true,
          "min": 0,
          "max": 100,
          "zones": [
            { "from": 0, "to": 20, "color": "#ef4444" },
            { "from": 20, "to": 40, "color": "#f59e0b" },
            { "from": 40, "to": 60, "color": "#10b981" },
            { "from": 60, "to": 80, "color": "#06b6d4" },
            { "from": 80, "to": 100, "color": "#3b82f6" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "lt", "value": 20, "status": "error", "label": "Too Dry" },
            { "operator": "between", "min": 20, "max": 40, "status": "warning", "label": "Dry" },
            { "operator": "between", "min": 40, "max": 60, "status": "success", "label": "Optimal" },
            { "operator": "between", "min": 60, "max": 80, "status": "info", "label": "Moist" },
            { "operator": "gte", "value": 80, "status": "info", "label": "Saturated" }
          ]
        }
      }
    },
    {
      "id": "soil_temp",
      "path": "decoded_payload.object.temp_SOIL",
      "name": "Soil Temperature",
      "unit": "°C",
      "decimals": 2,
      "defaultWidget": "time-series",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": -10, "max": 10, "color": "#3b82f6", "label": "Cold" },
            { "min": 10, "max": 25, "color": "#10b981", "label": "Optimal" },
            { "min": 25, "max": 35, "color": "#f59e0b", "label": "Warm" },
            { "min": 35, "max": 50, "color": "#ef4444", "label": "Hot" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": 0,
          "yAxisMax": 40,
          "showArea": true,
          "color": "#f59e0b"
        },
        "gauge": {
          "enabled": true,
          "min": 0,
          "max": 40,
          "zones": [
            { "from": 0, "to": 10, "color": "#3b82f6" },
            { "from": 10, "to": 25, "color": "#10b981" },
            { "from": 25, "to": 35, "color": "#f59e0b" },
            { "from": 35, "to": 40, "color": "#ef4444" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "lt", "value": 10, "status": "info", "label": "Cold" },
            { "operator": "between", "min": 10, "max": 25, "status": "success", "label": "Optimal" },
            { "operator": "between", "min": 25, "max": 35, "status": "warning", "label": "Warm" },
            { "operator": "gte", "value": 35, "status": "error", "label": "Hot" }
          ]
        }
      }
    },
    {
      "id": "soil_conductivity",
      "path": "decoded_payload.object.conduct_SOIL",
      "name": "Soil Conductivity",
      "unit": "µS/cm",
      "decimals": 0,
      "defaultWidget": "current-value",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": 0, "max": 200, "color": "#ef4444", "label": "Low" },
            { "min": 200, "max": 800, "color": "#10b981", "label": "Normal" },
            { "min": 800, "max": 2000, "color": "#f59e0b", "label": "High" },
            { "min": 2000, "max": 5000, "color": "#ef4444", "label": "Very High" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": 0,
          "yAxisMax": 1000,
          "showArea": false,
          "color": "#8b5cf6"
        },
        "gauge": {
          "enabled": true,
          "min": 0,
          "max": 2000,
          "zones": [
            { "from": 0, "to": 200, "color": "#ef4444" },
            { "from": 200, "to": 800, "color": "#10b981" },
            { "from": 800, "to": 2000, "color": "#f59e0b" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "lt", "value": 200, "status": "warning", "label": "Low Conductivity" },
            { "operator": "between", "min": 200, "max": 800, "status": "success", "label": "Normal" },
            { "operator": "between", "min": 800, "max": 2000, "status": "warning", "label": "High" },
            { "operator": "gte", "value": 2000, "status": "error", "label": "Very High" }
          ]
        }
      }
    },
    {
      "id": "temp_ds18b20",
      "path": "decoded_payload.object.temp_DS18B20",
      "name": "Temperature (DS18B20 - External)",
      "unit": "°C",
      "decimals": 2,
      "defaultWidget": "time-series",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": -40, "max": 0, "color": "#3b82f6", "label": "Cold" },
            { "min": 0, "max": 25, "color": "#10b981", "label": "Normal" },
            { "min": 25, "max": 50, "color": "#f59e0b", "label": "Warm" },
            { "min": 50, "max": 125, "color": "#ef4444", "label": "Hot" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": -10,
          "yAxisMax": 50,
          "showArea": true,
          "color": "#ef4444"
        },
        "gauge": {
          "enabled": true,
          "min": -10,
          "max": 50,
          "zones": [
            { "from": -10, "to": 0, "color": "#3b82f6" },
            { "from": 0, "to": 25, "color": "#10b981" },
            { "from": 25, "to": 50, "color": "#f59e0b" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "lt", "value": 0, "status": "info", "label": "Cold" },
            { "operator": "between", "min": 0, "max": 25, "status": "success", "label": "Normal" },
            { "operator": "gt", "value": 25, "status": "warning", "label": "Warm" }
          ]
        }
      }
    },
    {
      "id": "battery_voltage",
      "path": "decoded_payload.object.BatV",
      "name": "Battery Voltage",
      "unit": "V",
      "decimals": 3,
      "defaultWidget": "current-value",
      "widgets": {
        "current-value": {
          "enabled": true,
          "thresholds": [
            { "min": 2.0, "max": 2.5, "color": "#ef4444", "label": "Low" },
            { "min": 2.5, "max": 3.0, "color": "#f59e0b", "label": "Medium" },
            { "min": 3.0, "max": 3.6, "color": "#10b981", "label": "Good" }
          ]
        },
        "time-series": {
          "enabled": true,
          "yAxisMin": 2.0,
          "yAxisMax": 3.6,
          "showArea": false,
          "color": "#10b981"
        },
        "gauge": {
          "enabled": true,
          "min": 2.0,
          "max": 3.6,
          "zones": [
            { "from": 2.0, "to": 2.5, "color": "#ef4444" },
            { "from": 2.5, "to": 3.0, "color": "#f59e0b" },
            { "from": 3.0, "to": 3.6, "color": "#10b981" }
          ]
        },
        "status": {
          "enabled": true,
          "conditions": [
            { "operator": "lt", "value": 2.5, "status": "error", "label": "Low Battery" },
            { "operator": "between", "min": 2.5, "max": 3.0, "status": "warning", "label": "Medium" },
            { "operator": "gte", "value": 3.0, "status": "success", "label": "Good" }
          ]
        }
      }
    }
  ],
  "widgetTemplates": [
    {
      "id": "overview",
      "name": "Soil Monitoring Overview",
      "description": "Current values and trends for soil moisture, temperature, and conductivity",
      "layout": "grid",
      "defaultSize": { "w": 8, "h": 6 },
      "sections": [
        {
          "measurementId": "soil_moisture",
          "displayTypes": ["current-value", "time-series"]
        },
        {
          "measurementId": "soil_temp",
          "displayTypes": ["current-value", "time-series"]
        },
        {
          "measurementId": "soil_conductivity",
          "displayTypes": ["current-value"]
        },
        {
          "measurementId": "battery_voltage",
          "displayTypes": ["current-value"]
        }
      ]
    },
    {
      "id": "compact",
      "name": "Compact View",
      "description": "Current values only for all measurements",
      "layout": "vertical",
      "defaultSize": { "w": 3, "h": 5 },
      "sections": [
        {
          "measurementId": "soil_moisture",
          "displayTypes": ["current-value"]
        },
        {
          "measurementId": "soil_temp",
          "displayTypes": ["current-value"]
        },
        {
          "measurementId": "soil_conductivity",
          "displayTypes": ["current-value"]
        },
        {
          "measurementId": "battery_voltage",
          "displayTypes": ["current-value"]
        }
      ]
    },
    {
      "id": "gauges",
      "name": "Gauge View",
      "description": "Circular gauges for moisture, temperature, and conductivity",
      "layout": "horizontal",
      "defaultSize": { "w": 9, "h": 4 },
      "sections": [
        {
          "measurementId": "soil_moisture",
          "displayTypes": ["gauge"]
        },
        {
          "measurementId": "soil_temp",
          "displayTypes": ["gauge"]
        },
        {
          "measurementId": "soil_conductivity",
          "displayTypes": ["gauge"]
        }
      ]
    },
    {
      "id": "moisture-focus",
      "name": "Moisture Focus",
      "description": "Detailed soil moisture monitoring with gauge and trend",
      "layout": "vertical",
      "defaultSize": { "w": 6, "h": 6 },
      "sections": [
        {
          "measurementId": "soil_moisture",
          "displayTypes": ["gauge", "time-series"]
        }
      ]
    },
    {
      "id": "combined-trends",
      "name": "Moisture & Temperature Trends",
      "description": "Soil moisture and temperature on a single chart with dual Y-axes",
      "layout": "vertical",
      "defaultSize": { "w": 8, "h": 5 },
      "sections": [
        {
          "measurementId": ["soil_moisture", "soil_temp"],
          "displayTypes": ["time-series"],
          "combinedChart": true,
          "chartConfig": {
            "title": "Soil Moisture & Temperature Over Time",
            "measurementIds": ["soil_moisture", "soil_temp"]
          }
        }
      ]
    }
  ]
}
